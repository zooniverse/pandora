.site-header
  color #fff
  background #ababab url('../../images/zooniverse-icon-web-white-small.png') no-repeat right
  background-size contain
  border-bottom #ff8d00 1px solid

  .title
    display inline-block
    padding 20px 20px

  .link
    display inline-block
    margin 10px
    padding 10px
    color #fff
    text-decoration none
    border-radius 3px
    &.active,
    &:hover
      background-color #636363
